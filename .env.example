# InsuranceStack Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# CloudBees Feature Management
# ============================================================================
# Required for feature flags to connect to CloudBees FM
# Get your API key from: https://app.cloudbees.io/
CLOUDBEES_FM_API_KEY=your-api-key-here

# ============================================================================
# Application Configuration
# ============================================================================
# Log level for all services
LOG_LEVEL=info  # Options: debug, info, warn, error

# JWT Secret for authentication (change in production)
JWT_SECRET=dev-secret-key-change-in-production

# Default auth credentials for demo
AUTH_USERNAME=demo@insurancestack.com
AUTH_PASSWORD=demo123

# ============================================================================
# Feature Flags (Environment-based)
# ============================================================================
# Override CloudBees FM flags with environment variables
# Remove these to use CloudBees FM exclusively

# Policy Service - Mask premium amounts in responses
FEATURE_MASK_AMOUNTS=false

# Claims Service - Auto-approve low-value claims
FEATURE_AUTO_APPROVAL=false

# Pricing Engine - Use dynamic pricing vs fixed rates
FEATURE_DYNAMIC_PRICING=false

# Payments Service - Instant payouts vs batch processing
FEATURE_INSTANT_PAYOUTS=false

# UI - Show fast-track claims option
FEATURE_CLAIMS_FAST_TRACK=false

# UI - Enable self-service policy cancellation
FEATURE_POLICIES_CANCEL_SELF_SERVICE=false

# ============================================================================
# Service URLs (for docker-compose local development)
# ============================================================================
VITE_API_POLICIES_URL=http://localhost:8001
VITE_API_CLAIMS_URL=http://localhost:8002
VITE_API_PRICING_URL=http://localhost:8003
VITE_API_CUSTOMERS_URL=http://localhost:8004
VITE_API_PAYMENTS_URL=http://localhost:8005

# ============================================================================
# Development Options
# ============================================================================
# Enable debug mode (adds extra logging and debug UI)
DEBUG_MODE=false

# API delay simulation (milliseconds) - useful for testing loading states
API_DELAY_MS=0

# Show demo credentials in UI login
VITE_SHOW_DEMO_CREDENTIALS=true

# ============================================================================
# Optional: CloudBees CI/CD Integration
# ============================================================================
# These are typically set by CloudBees Unify workflows
# CLOUDBEES_API_TOKEN=
# CLOUDBEES_ORG=
# CLOUDBEES_WORKFLOW_ID=
